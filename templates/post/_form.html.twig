{{ form_start(form) }}
    <div class="form-group">
        {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': '4', 'placeholder': 'Exprimez-vous...'}}) }}
    </div>
    <div class="form-check">
        {{ form_widget(form.isAnonymous, {'attr': {'class': 'form-check-input'}}) }}
        {{ form_label(form.isAnonymous, 'Publier anonymement', {'label_attr': {'class': 'form-check-label'}}) }}
    </div>
    {{ form_widget(form._token) }}
    <button class="btn btn-primary mt-2">{{ button_label|default('Publier') }}</button>
{{ form_end(form) }}